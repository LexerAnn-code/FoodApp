<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailFragment">

    <com.google.android.material.card.MaterialCardView
    android:layout_width="50dp"
    android:layout_height="40dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="30dp"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginStart="30dp"
    android:layout_marginTop="15dp"
    app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_back"></ImageView>


</com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
    android:layout_width="50dp"
    android:layout_height="40dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="30dp"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginEnd="30dp"
    android:layout_marginTop="15dp"
    app:layout_constraintTop_toTopOf="parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fav"></ImageView>


</com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="30dp"
        android:elevation="40dp"
        android:layout_marginTop="70dp">
        <ImageView
            android:id="@+id/main_image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            ></ImageView>


    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/foodName3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Chicken"
        android:maxLines="2"
        android:fontFamily="@font/manjari_bold"
        app:layout_constraintTop_toBottomOf="@id/card1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:textSize="25sp"
        android:textColor="#000000"
        android:layout_marginTop="20dp"></TextView>

    <TextView
        android:id="@+id/price3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6.99"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card1"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/manjari_bold"
        android:textColor="#000000"
        android:textSize="30sp"></TextView>

    <TextView
        android:id="@+id/rating3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/foodName3"
        android:layout_marginTop="20dp"
        android:text="4.5"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:drawableStart="@drawable/ic_star"
        android:textColor="#000000"
        android:fontFamily="@font/manjari_bold"
        ></TextView>

    <TextView
        android:id="@+id/calories3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/foodName3"
        android:layout_marginTop="20dp"
        android:text="4.5"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/rating3"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/manjari_bold"
        android:drawableStart="@drawable/download2"
        android:textColor="#000000"
        android:textAlignment="textEnd"></TextView>

    <TextView
        android:id="@+id/cooking_time3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/foodName3"
        android:layout_marginTop="20dp"
        android:text="4.5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/manjari_bold"
        android:drawableStart="@drawable/ic_time"
        android:textColor="#000000"
        android:padding="2dp"
        android:gravity="center"></TextView>

    <TextView
        android:id="@+id/det"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/rating3"
        app:layout_constraintStart_toStartOf="parent"
       android:text="Details"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:fontFamily="@font/manjari_bold"
        android:textColor="#000000"></TextView>

    <TextView
        android:id="@+id/detail3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/det"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Details"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        android:ellipsize="end"
        android:layout_marginStart="30dp"
        android:fontFamily="@font/manjari_bold"
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/det3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/detail3"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Ingredients"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:textColor="#000000"></TextView>



    <com.google.android.material.card.MaterialCardView
        android:id="@+id/im1"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="20dp">
    <ImageView
            android:id="@+id/ing2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_search"
            android:scaleType="centerCrop"

           />
    </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView

            android:layout_width="80dp"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/im1"
            >
            <ImageView
                android:id="@+id/ing1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:src="@drawable/ic_search"
                android:scaleType="centerCrop"
                />
        </com.google.android.material.card.MaterialCardView>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp">
    <ImageView

            android:id="@+id/ing4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_search"

            android:scaleType="centerCrop"
            />
    </com.google.android.material.card.MaterialCardView>















</androidx.constraintlayout.widget.ConstraintLayout>